<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:textAppearanceLarge">@style/TextAppearance.Large</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.Medium</item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.Small</item>

        <item name="android:textColor">@android:color/black</item> <!-- TextView text, actionbar item text, preferences title text color -->
        <item name="android:textColorPrimary">@android:color/white</item> <!-- action bar text color -->
        <item name="android:textColorSecondary">@android:color/black</item> <!-- preferences summary text color -->

        <!-- Support library compatibility -->
        <item name="colorPrimary">@color/theme_primary</item> <!-- actionbar background color -->
        <item name="colorAccent">@color/theme_primary</item> <!-- preferences category text color -->

    </style>

    <!-- TODO: fix individual view theming so styles below here aren't needed (or at least are cleaned up) -->

    <!--
    Styles referenced by theme
    -->

    <style name="TextAppearance" parent="Base.TextAppearance.AppCompat">

    </style>

    <style name="TextAppearance.Large" parent="Base.TextAppearance.AppCompat.Large">

    </style>

    <style name="TextAppearance.Medium" parent="Base.TextAppearance.AppCompat.Medium">

    </style>

    <style name="TextAppearance.Small" parent="Base.TextAppearance.AppCompat.Small">

    </style>

    <!--
    Standalone styles
    -->

    <style name="SectionHeader" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/theme_primary</item>
        <!-- derived based on an answer from: http://stackoverflow.com/questions/10020466/android-4-0-sub-title-section-label-styling -->
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <!-- this is coped from Widget.TextView.ListSeparator in sdk android-21 -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:textColor">?android:textColorTertiary</item>-->
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dip</item>
    </style>

</resources>
