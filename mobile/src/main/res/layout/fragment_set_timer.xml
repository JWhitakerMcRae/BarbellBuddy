<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetTimerActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/textView_setTimerInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="0dp"
        android:te@string/textview_set_timer_info"
        android:textAppearance="@style/SectionHeader"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textView_setTimerInfo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_setTimerInfo"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="0dp"
        android:text="@string/textview_set_timer_info2"
        android:textAppearance="@style/TextAppearance.Medium"
        android:visibility="gone"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="90dp">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="-2dp"
            android:layout_gravity="center"
            android:src="@mipmap/bezel_transparent_glass"/>

        <com.mcraesolutions.watchfacelibrary.WatchfaceLayout
            android:id="@+id/watchfaceLayout_watchface"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"/>

    </FrameLayout>

    <Button
        android:id="@+id/button_setTimerStartStop"
        android:background="@drawable/button_drawable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/padding_button"
        android:paddingLeft="@dimen/padding_button_sides"
        android:paddingRight="@dimen/padding_button_sides"
        android:paddingTop="@dimen/padding_button"
        android:text="@string/button_set_timer_start"
        android:textColor="@android:color/white"/>

</RelativeLayout>
